<Window x:Class="WpfLearn2.TestWindow5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLearn2"
        mc:Ignorable="d"
       Title="MainWindow" Height="150" Width="300">

    <Grid>
        <GroupBox Header="请选择没有错误的成语" BorderBrush="Black" Margin="5">
            <StackPanel Margin="5">
                <CheckBox Content="A 迫不及待"/>
                <CheckBox Content="B 陈词烂调"/>
                <CheckBox Content="C 哀声叹气"/>
                <CheckBox Content="D 不可理喻"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Clear" Width="60" Margin="5"/>
                    <Button Content="Ok" Width="60" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>